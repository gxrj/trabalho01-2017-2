<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pooa20172.iff.edu.br.trabalho01.MainActivity">

    <EditText
        android:id="@+id/nome"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome Completo"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp" />

    <EditText
        android:id="@+id/salarioHora"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Salario/Hora"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <EditText
        android:id="@+id/horasMes"
        android:layout_width="368dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Horas Trabalhadas no Mes"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/salarioHora" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horasMes"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/horasMes" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horasMes"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/horasMes" />
</android.support.constraint.ConstraintLayout>
